@model IEnumerable<FaixaEtaria.Models.Pessoa>


<div class="panel panel-primary">

    <div class="panel panel-heading">Adultos Cadastrados <span class="badge">@Model.Count()</span></div>

    <div class="panel panel-body">

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Idade)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Idade)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PessoaID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PessoaID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PessoaID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>