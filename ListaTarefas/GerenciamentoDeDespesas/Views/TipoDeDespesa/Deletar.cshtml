@model GerenciamentoDeDespesas.Dto.TipoDeDespesaDto


@{
    ViewData["Title"] = "Novo";
}

<div class="container">

    <form role="form" asp-controller="TipoDeDespesa" asp-action="Deletar" method="post">
        <div class="form-body">
            <input type="hidden" asp-for="TipoDeDespesaId" />

            <div class="form-group">
                <label>Tipo de Despesa</label>
                <div class="input-group">
                    <input type="text" asp-for="Nome" class="form-control" id="nome" disabled  placeholder="Nome do Tipo Despesa" />

                </div>
                <small class="form-text text-muted"> <span class="text-danger" asp-validation-for="Nome"></span> </small>
            </div>

        </div>
        <div class="form-actions">
            <p>
                <button type="submit" class="btn btn-outline-info">Excluir</button>
                <a asp-action="Index" asp-controller="TipoDeDespesa" class="btn btn-outline-warning">Retornar</a>
            </p>
        </div>
    </form>
    <br />


</div>

